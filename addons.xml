<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.movie2free2" name="Movie2Free2" version="1.0.4" provider-name="watcharakorn-narbandit">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Movie2Free2</summary>
    <description lang="en">This Plugin provides access to movies on website http://www.movie2free2.com</description>
    <disclaimer lang="en"></disclaimer>
    <summary lang="th">Movie2Free2</summary>
    <description lang="th">ปลั๊กอินนี้ใช้สำหรับดูภาพยนต์จากเวปไซต์ [CR] http://www.movie2free2.com ฟรี</description>
    <disclaimer lang="th"></disclaimer>
    <language>en th</language>
    <platform>all</platform>
    <license>GPL-2.0</license>
    <forum></forum>
    <website>http://www.movie2free2.com</website>
    <email>man2009@hotmail.com</email>
    <source>https://github.com/watcharakorn/movie2free2/</source>
    <news>v1.0.4 (11/12/2019)
      [new] update version 1.0.4
      [fix] update categories menu and fix duplicate movies in featured menu
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <banner></banner>
        <clearlogo></clearlogo>
        <screenshot></screenshot>
    </assets>
  </extension>
</addon>

<addon id="repository.movie2free2" name="Movie2Free2 Add-on Repository" version="1.0.1" provider-name="watcharakorn-narbandit">
	<extension point="xbmc.addon.repository" name="Movie2Free2 XBMC Add-ons">
		<info compressed="false">https://raw.githubusercontent.com/watcharakorn/Movie2Free2/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/watcharakorn/Movie2Free2/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/watcharakorn/Movie2Free2/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from Movie2Free2 Add-on Repository</summary>
		<description>Plug-ins for XBMC</description>
		<disclaimer>Add-ons that access to movies on website http://www.movie2free2.com with XBMC</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
